@model ArgenGrill.Models.NewsletterViewModel

@using (Ajax.BeginForm("CreateNewsletter", "Home", new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "result", LoadingElementId = "loading" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" id="result">
        <h4>Sign in for our Newsletter</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })

                <div class="col-md-4">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-2">
                    <input type="submit" value="Sign In" class="btn btn-default" />
                </div><div class="col-md-2">
                    <div id="loading">
                        <img src="~/Images/Images/loading2.gif" style="width:50px; height:50px" />
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div>
            <p><h4 class="text-danger">@ViewBag.Message</h4></p>
        </div>

        <br />
    </div>

}